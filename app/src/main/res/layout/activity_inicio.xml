<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="#1E1E2F">

    <ImageView
        android:id="@+id/iconoInicio"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/baseline_note_alt_24"
        android:contentDescription="@string/app_name"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mis Notas"
        android:textSize="28sp"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/subtituloInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organiza tus ideas de forma simple y elegante"
        android:textSize="22sp"
        android:textColor="#B0B0B0"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:layout_marginBottom="48dp" />

    <Button
        android:id="@+id/Entrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrar a la aplicaciÃ³n"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@drawable/boton_nuevo"
        android:padding="12dp"
        android:elevation="4dp"/>

</LinearLayout>
