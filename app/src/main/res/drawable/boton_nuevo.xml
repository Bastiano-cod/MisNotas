<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#29293D" />
            <corners android:radius="20dp" />
            <stroke android:width="2dp" android:color="#7C4DFF" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1C1C28" />
            <corners android:radius="20dp" />
            <stroke android:width="2dp" android:color="#9C27B0" />
            <padding android:left="16dp" android:top="12dp"
                android:right="16dp" android:bottom="12dp" />
        </shape>
    </item>
</selector>
